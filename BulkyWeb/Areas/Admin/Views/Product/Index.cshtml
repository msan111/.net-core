@model List<Product>

<div class="card shadow border-0 my-5">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container">
            <div class="row pb-4">
                <div class="col-12 text-end">
                    <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New Product
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover border">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">ISBN</th>
                <th scope="col">Price</th>
                <th scope="col">Author</th>
                <th scope="col">Category</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @{
            var counter = 1;
            }
            @foreach (var obj in Model.OrderBy(u => u.Description))
            {
            <tr>
                <th scope="row">@counter</th>
                <td>@obj.Title</td>
                <td>@obj.ISBN</td>
                <td>@obj.ListPrice</td>
                <td>@obj.Author</td>
                <td>@obj.Category.Name</td>




                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
            counter++;
            }
            </tbody>
        </table>
    </div>
</div>
